    <section class="mb-5">
        <h1 class="mt-4">{{header}}</h1>
        <div class="purchase mt-4">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#">{{purchase.tabs.[0]}}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">{{purchase.tabs.[1]}}</a>
                </li>
            </ul>

            <div class="row mt-4">
                <div class="input-group mb-3">
                    <div class="col-4">
                        <input type="text" class="form-control" placeholder="{{purchase.actionBlock.input.placeholder}}">
                    </div>
                    <div class="input-group-append mx-2">
                        <a href="{{purchase.actionBlock.buttons.[0].link}}" class="btn btn-success">{{purchase.actionBlock.buttons.[0].text}}</a>
                        <a href="{{purchase.actionBlock.buttons.[1].link}}" class="btn btn-outline-success">{{purchase.actionBlock.buttons.[1].text}}</a>
                        <a href="{{purchase.actionBlock.buttons.[2].link}}" class="btn btn-outline-danger">{{purchase.actionBlock.buttons.[2].text}}</a>
                    </div>
                </div>
            </div>

            <div class="fw-bold"><hr /></div>

            <div>
                {{#each purchase.itemList}}
                    <div class="row gx-4 gy-4">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <div><span>{{number}}</span></div>
                                    <div><span class="fw-bold">{{status}}</span></div>
                                </div>
                                <div class="col-2">
                                    <div><span>{{amount.title}}:</span></div>
                                    <div class="fw-bold"><span>{{amount.value}}</span></div>
                                </div>
                                <div class="col-4">
                                    {{#each images}}
                                        <img class="rounded" width="60px" height="60px" src="{{this}}" alt="Image">
                                    {{/each}}
                                </div>
                                <div class="col-2">
                                    <a href="{{button.link}}" class="btn {{#if button.isPrimary}}btn-primary{{/if}}">{{button.text}}</a>
                                </div>                                
                            </div>
                        </div>
                    </div>
                    <div><hr /></div>
                {{/each}}
            </div>
        </div>
    </section>