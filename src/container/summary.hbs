Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <header>
        <div>
            <h1>Dmytro Ivanov | Resume</h1>
        </div>
        <div>
            <b>Junior Fullstack JS Developer</b>
        </div>
        <br />
        <div>
            <em>{{salary}}</em>
        </div>

        <br>
        <hr>
    </header>

    <main>
        {{#with experience}}
            <section>
                {{> title data = section1.title big = true}}
                <div>
                    <p>
                        {{section1.text}}
                    </p>
                </div>
            </section>

            <section>
                {{> title data = section2.title big = false}}
                <div>
                    <p>
                        {{section2.text}}
                    </p>
                </div>
            </section>
        {{/with}}
    </main>

</div>

